<link rel="stylesheet" href="/styles/profile.css" />
<link rel="stylesheet" href="/styles/routines.css" />

<div class='container'>

    <div class='row'>
        <div class='col'>
            <h1>Your routines</h1>
        </div>
    </div>

    <div class='row'>

        <div class='col'>

            <a class="btn btn-success" href='/routines/add'>
                New Rotuine
            </a>

            <table class='table'>
                <thead>
                    <tr>
                        <th scope='col'>Actively Used</th>
                        <th scope='col'>Routine Name</th>
                        <th scope='col'># of Exercises</th>
                        <th scope='col'># of Times Completed</th>
                        <th scope='col'>Created On</th>
                        <th scope='col'></th>
                        <th scope='col'></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each routines}}
                    <tr>
                        <td>{{inUse}}</td>
                        <td>{{name}}</td>
                        <td>{{numOfExercises}}</td>
                        <td>{{numOfTimesCompleted}}</td>
                        <td>{{createdAtFormatted}}</td>
                        <td>
                            <a class='btn btn-warning' href='/routines/edit/{{_id}}'>
                                Edit
                            </a>
                        </td>
                        <td>
                            <form action='/routines/delete' method='post'>
                                <input type='hidden' name='_id' value='{{_id}}'>
                                <button class='btn btn-danger' type='submit' value='Submit'>Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>

    </div>
</div>

