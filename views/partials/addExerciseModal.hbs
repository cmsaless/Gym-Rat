<div class="modal fade" id="addExerciseModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Exercise</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id='' action='/' method='post'>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="input-name">Exercise name</label>
                        <input name='name' class="form-control" id="input-name" placeholder="Squats, Pull-ups, 5K, etc.">
                    </div>
                    <div class="form-group">
                        <label for="input-type">Type of exercise</label>
                        <input name='type' class="form-control" id="input-type" placeholder="Legs, Biceps, Running, etc.">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="category" id="category-strength"
                            value="strength" checked>
                        <label class="form-check-label" for="category-strength">
                            Strength
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="category" id="category-cardio"
                            value="cardio">
                        <label class="form-check-label" for="category-cardio">
                            Cardio
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" value='Submit' class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>