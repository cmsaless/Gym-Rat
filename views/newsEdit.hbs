<div class='container'>
    <div class='row'>
        <div class='col col-md-12'>
            <h1>Updating</h1>
            <form id='registerForm' action='/news/edit/{{update._id}}' method='post'>
                <div class="form-group">
                    <label for="titleInput">Title</label>
                    <input name='title' class="form-control" id="titleInput" value="{{update.title}}">
                </div>
                <div class="form-group">
                    <label for="subtitleInput">Subtitle <i>(optional)</i></label>
                    <input name='subtitle' class="form-control" id="subtitleInput" value=
                    {{#if update.subtitle}} {{update.subtitle}} {{else}} "Subtitle" {{/if}} >
                </div>
                <div class="form-group">
                    <label for='descriptionInput'>Description</label>
                    <textarea name='description' class="form-control" id="descriptionInput" rows="15">{{update.description}}</textarea>
                </div>
                <br />
                <button class='btn btn-success' type='submit' value='Submit'>Update</button>
            </form>
        </div>
    </div>
</div>